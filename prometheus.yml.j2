global:
  scrape_interval: 10s

scrape_configs:
  - job_name: 'cadvisor'
    static_configs:
      - targets: ['cadvisor:8080']

  - job_name: 'mysql'
    static_configs:
      - targets: ['mysqld_exporter_node1:9104']
      - targets: ['mysqld_exporter_node2:9104']
      - targets: ['mysqld_exporter_node3:9104']

